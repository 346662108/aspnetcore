@page
@model SettingsModel
@{
    ViewBag.Title = "用户配置";
    ViewBag.Current = "users.settings";
}

<form method="post">
    <div class="form-group">
        <moz:checkbox for="Input.Registrable">
            <label asp-for="Input.Registrable"></label>
        </moz:checkbox>
    </div>
    <div class="form-group">
        <moz:checkbox for="Input.RequiredEmailConfirmed">
            <label asp-for="Input.RequiredEmailConfirmed"></label>
        </moz:checkbox>
    </div>
    <div class="form-group">
        <moz:checkbox for="Input.RequiredPhoneNumberConfirmed">
            <label asp-for="Input.RequiredPhoneNumberConfirmed"></label>
        </moz:checkbox>
    </div>
    <div class="form-group">
        <moz:checkbox for="Input.RequiredTwoFactorEnabled">
            <label asp-for="Input.RequiredTwoFactorEnabled"></label>
        </moz:checkbox>
    </div>
    <div class="form-group">
        <label asp-for="Input.LoginDirection"></label>
        <moz:enum-dropdownlist for="Input.LoginDirection" class="form-control max-250"></moz:enum-dropdownlist>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-secondary">提交</button>
    </div>
</form>