@page
@model EditModel
@{
    ViewBag.Title = "分类信息";
    Layout = "_Modal";
}

<form method="post">
    <input type="hidden" asp-for="Input.Id" />
    <div class="form-group">
        <label>显示名称</label>
        <input asp-for="Input.Text" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Text"></span>
    </div>
    <div class="form-group">
        <moz:checkbox for="Input.Disabled">禁用</moz:checkbox>
    </div>
</form>