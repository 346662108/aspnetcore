@page
@model CategoryModel
@{
    ViewBag.Title = "权限分类";
    ViewBag.Current = "users.permissions";
}

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>唯一键</th>
                <th>显示名称</th>
                <th class="text-center">启用</th>
                <th class="data-action">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Text
                    </td>
                    <td class="text-center">
                        @if (category.Disabled)
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        else
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                    </td>
                    <td class="data-action">
                        <a js-modal="click" asp-page="./Edit" asp-route-id="@category.Id"><i class="fa fa-pencil"></i> 编辑</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>