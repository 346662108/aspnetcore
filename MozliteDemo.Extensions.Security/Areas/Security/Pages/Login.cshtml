@page "/login"
@model LoginModel
@inject ISettingsManager SettingsManager
@{
    ViewData["Title"] = "用户登陆";
    Layout = "_Global";
    var settings = SettingsManager.GetSettings<SiteSettings>();
}

<form class="form-signin" method="post">
    <div class="text-center mb-4">
        <img class="mb-4" src="@(settings.LogoUrl??"/images/logo.png")" alt="@settings.SiteName" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">@settings.SiteName</h1>
    </div>

    <div class="form-label-group">
        <input asp-for="Input.UserName" class="form-control" placeholder="用户名" />
        <label>用户名</label>
        <span asp-validation-for="Input.UserName" class="text-danger" autofocus></span>
    </div>
    <div class="form-label-group">
        <input asp-for="Input.Password" class="form-control" placeholder="密码" />
        <label>密码</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-label-group">
        <div class="input-group input-append">
            <input asp-for="Input.Code" class="form-control" placeholder="验证码" />
            <label>验证码</label>
            <div class="input-group-append"><moz:verifier class="validcode" key="login" size="24" height="48" length="6"></moz:verifier></div>
        </div>
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <moz:checkbox for="Input.RememberMe" class="mb-3">记住登陆状态</moz:checkbox>
    <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">登入</button>
    <p>
        <a id="forgot-password" asp-page="./ForgotPassword">忘记密码?</a>
    </p>
    <p >
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">注册新用户</a>
    </p>
</form>
@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>使用其他登陆方式登陆</h4>
            <hr />
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="使用你的@(provider.DisplayName)账号登陆">@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        </section>
    </div>
}

@section header{
    <link href="~/security/css/login.css" rel="stylesheet" />
}